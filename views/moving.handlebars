<div id="burden-wrapper">
  <form id="form-burden" action="/outside/moving" method="post" name="submitter">
    <label for="id" class="burden-label">ID</label>
    <input type="text" name="id" placeholder="Pollaco12" class="form-input form-moving">
    <label for="pwd">Password</label>
    <input type="password" name="pwd" placeholder="qwerty" class="form-input form-moving">
    <label for="nick">Nick Name</label>
    <input type="text" name="nick" placeholder="Pollaco" class="form-input form-moving">
    <label for="email">E-mail</label>
    <input type="email" name="email" placeholder="Pollaco@gmail.com" class="form-input form-moving">
  </form>
  <span><h3>Press <span class="enter">enter</span> to finish moving</h3></span>
  <span><h3>or <span class="enter">backspace</span> to cancle moving</h3></span>
  <span id="flash"></span>
</div>
