<div class="post-wrapper">
    <div id="post-detail" class="">
        <div class="idAndBrd">
          <ul>
            <li><span id="post-id" class="prepost-small" style="padding-left:1px">#{{this.pst_Id}}</span> <span class="prepost-small" style="padding-right:1px">{{this.brd_Title}}</span></li>
            <li><span class="prepost-small">{{this.pst_Writer}}</span></li>
          </ul>
        </div>
        <div class="andSoOn">
          <ul>
            <li><spanclass="prepost-small">{{this.pst_View}}</span><span style="padding-left: 10px">views</span></li>
            <li style="width: 100%"><span class="prepost-small">{{this.pst_Date}}</span></li>
          </ul>
        </div>
    </div>
    <div id="post-title" class="게시글 제목">
      <li><span><h2 style="margin-top:0; padding-top:15px">{{this.pst_Title}}</h2></span></li>
    </div>
    <div id="post-content" class="게시글 내용">
      <span>{{this.pst_Content}}</span>
    </div>
    <div class="댓글">
      <ul id="post-comment">

      </ul>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    pagingP($('.active-board').text(), parseInt($('.active-page').text()));

    $('.prepost-comment-detail button').on('click', function(event){
      console.log("clickckckck");
      var formData='{';
      // form을 serialize()하면 pst_Id=2522&cmnt_Content=와 같이 쿼리 스트링으로 변한다. 이를
      // replace와 정규표현식의 g(발생할 모든 패턴에 대한 전역 검색)를 이용해 json 형태로 바꿔준다.
      formDate += $('#comment-form').serialize().replace(/=/g, ':"')
                                                .replace(/&/g, '",') + '"}';
      // comment 전달
      $.ajax({
        url: '/write-comment',
        type: 'post',
        data: JSON.parse(formDate),
        dataType: 'json',
        success: function(data){
          console.log('plzz');
          $('.content-wrapper').scrollTop(0)
          viewPost(parseInt($('#post-id').text().replace('#', '')));
        }
      });
    });
  });
</script>
