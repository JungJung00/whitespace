<div id="burden-wrapper">
  <form id="form-burden" action="/outside/moving" method="post" name="submitter">
    <ul>
      <label for="id" class="burden-label">ID</label>
      <li class="form-moving tip">
        <input type="text" name="id" placeholder="Pollaco12" id="input-id" class="form-input"><span class="tip-text">경고</span>
      </li>
      <label for="pwd">Password</label>
      <li class="form-moving tip">
        <input type="password" name="pwd" placeholder="qwerty" id="input-pwd" class="form-input"><span class="tip-text">경고</span>
      </li>
      <div id="pwdck-slider">
        <label for="pwdck">Password Check</label>
        <li class="form-moving tip">
          <input type="password" name="pwdck" placeholder="qwerty" id="input-pwdck" class="form-input"><span class="tip-text">경고</span>
        </li>
      </div>
      <label for="nick">Nick Name</label>
      <li class="form-moving tip">
        <input type="text" name="nick" placeholder="Pollaco" id="input-nick" class="form-input"><span class="tip-text">경고</span>
      </li>
      <label for="email">E-mail</label>
      <li class="form-moving tip">
        <input type="email" name="email" placeholder="Pollaco@gmail.com" id="input-email" class="form-input"><span class="tip-text">경고</span>
      </li>
    </ul>
    <script type="text/javascript">
    $(document).ready(function(){
      $('#input-id').focus();
      $('#input-id').on('textchange', function(){
        idFilter();
      });
      $('#input-pwd').on('textchange', function(){
        pwdFilter();
      });
      $('#input-pwdck').on('textchange', function(){
        pwdckFilter();
      });
      $('#input-nick').on('textchange', function(){
        nickFilter();
      });
      $('#input-email').on('textchange', function(){
        emailFilter();
      });
    });
      </script>
  </form>
  <span><h3>Press <span class="enter">enter</span> to finish moving</h3></span>
  <span><h3>or <span class="enter">backspace</span> to cancle moving</h3></span>
  <span id="flash"></span>
</div>
